{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}